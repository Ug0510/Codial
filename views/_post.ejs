<li >
    <p>
        <% if (locals.user && locals.user.id == posts.user.id) { %>
            <form action="/posts/destroy/<%= posts.id %>" method="POST">
                <small>
                    <input type="submit" value="Delete">
                </small>
            </form>
        <% } %>
        
        <%= posts.content %> by
    <small>
        <%= posts.user.name %>
    </small>
    <br>
    <br>
    <% if (locals.user) { %>
    <form action="/comments/create" method="POST" id="new-comment-form">
        <textarea name="content" cols="30" rows="3" required></textarea>
        <input type="hidden" name="post" value="<%= posts._id %>">
        <input type="submit" value="Comment">
    </form>
    <% } %>
    </p>
    <div id="post-comments-list">
        <ul> Comments:
            <br>
        <% for (comment of posts.comments){ %>
            <li>
                <%= comment.content %> by <%= comment.user.name %> 
                <% if (locals.user && locals.user.id == comment.user.id) { %>
                    <form action="/comments/destroy/<%= comment.id %>" method="POST">
                        <small>
                            <input type="submit" value="Delete">
                        </small>
                    </form>
                <% } %>

            </li>
        <% } %>
        </ul>
    </div>
</li>